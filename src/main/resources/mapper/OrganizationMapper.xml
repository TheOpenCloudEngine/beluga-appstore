<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.opencloudengine.serviceportal.db.mapper.OrganizationMapper">

    <select id="select" parameterType="map" resultType="org.opencloudengine.serviceportal.db.entity.Organization">
        select * from organization
        where id = #{id}
    </select>

    <insert id="insert" parameterType="org.opencloudengine.serviceportal.db.entity.Organization">
        INSERT INTO organization(
            `id`, `name`
        ) VALUES(
            #{id}, #{name}
        )
    </insert>

    <delete id="truncate">
        truncate table organization
    </delete>
</mapper>