<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <!--<mvc:resources mapping="/resources/**" location="/resources/"/>-->

    <context:component-scan base-package="org.opencloudengine.serviceportal.controller, org.opencloudengine.serviceportal.service"/>

    <mvc:default-servlet-handler/>

    <!-- Use @Controller annotations for MVC controller definitions -->
    <mvc:annotation-driven />

    <mvc:interceptors>
        <!--<bean class="org.opencloudengine.serviceportal.controller.AuthMainInterceptor"/>-->
        <mvc:interceptor>
            <mvc:mapping path="/**/*.html"/>
            <mvc:exclude-mapping path="/login.html"/>
            <bean id="authMainInterceptor" class="org.opencloudengine.serviceportal.controller.AuthMainInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

